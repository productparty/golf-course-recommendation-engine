{
  "version": 2,
  "builds": [
    { "src": "server/app.py", "use": "@vercel/python" },
    {
      "src": "golf-club-ui/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/app.py" },
    { "source": "/golf-club-ui/(.*)", "destination": "/golf-club-ui/dist/$1" },
    { "source": "/golf-club-ui/:path*", "destination": "/golf-club-ui/index.html" },
    { "source": "/(.*)", "destination": "/golf-club-ui/dist/index.html" }
  ]
}
