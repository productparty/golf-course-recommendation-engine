{
  "version": 2,
  "builds": [
    {
      "src": "golf-club-ui/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "golf-club-ui/dist",
        "buildCommand": "cd golf-club-ui && npm install && npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/golf-club-ui/dist/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/golf-club-ui/dist/index.html" }
  ]
}
