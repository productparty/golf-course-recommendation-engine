{
  "version": 2,
  "builds": [
    {
      "src": "golf-club-ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "cleanUrls": true,
        "rewrites": [
          { "source": "/(.*)", "destination": "/index.html" }
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "check": true
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}